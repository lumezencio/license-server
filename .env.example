# License Server - Environment Variables

# App
APP_NAME=License Server
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8080

# Database (SQLite for simplicity, can use PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./licenses.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/licenses

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
RSA_PRIVATE_KEY_PATH=keys/private_key.pem
RSA_PUBLIC_KEY_PATH=keys/public_key.pem

# License Settings
LICENSE_GRACE_PERIOD_DAYS=7
LICENSE_HEARTBEAT_INTERVAL_HOURS=4
LICENSE_VALIDATION_CACHE_HOURS=24

# Admin (CHANGE IN PRODUCTION!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-password

# CORS (restrict in production)
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
